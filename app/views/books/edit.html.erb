<div class="edit">
	<h2 class="edit-title">Editing Book</h2>


	<!-- form_for部分 -->
	<%= form_for(@book) do |f| %>
		<p class="edit-text">Title</p>
		<%= f.text_field :title %>
		<p class="edit-text">Body</p>
		<%= f.text_area :body %>
		<p class="edit-button">
			<%= f.submit 'Update Book' %></p>
	<% end %>

	<p class="edit-text">
		<%= link_to "Show", book_path(@book), class: "show_#{@book.id}" %> | <%= link_to "Back", new_book_path, class: "back" %>
	</p>
</div>