<div class="new">

<!-- <p class="notice">Book was successfully destroyed.</p> -->

	<% if flash[:notice] %>
		<p class="new-success"><%= flash[:notice] %></p>
	<% end %>

	<h2 class="new-title">Books</h2>

	<table>
		<thead class="new-thead">
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
	 		<!--<th>D1</th>
				<th>E1</th> -->
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to 'Show', book_path(book.id), class: "show_#{book.id}" %></td>
					<td><%= link_to 'Edit', edit_book_path(book.id), class: "edit_#{book.id}" %></td>
					<td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class: "destroy_#{book.id}" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<h3>New book</h3>

		<!-- form_for部分 -->
	<%= form_for(@book) do |f| %>

		<p class="new-titlebody">Title</p>
		<div class="new-f.text">
			<%= f.text_field :title, class: "book_title" %>

			<% if @book.errors.messages[:title].any? %>
				<p class="error">
					<%= @book.errors.messages[:title][0] %>
				</p>
			<% end %>

		</div>

		<p class="new-titlebody">Body</p>
		<div class="new-f.text">
			<%= f.text_area :body, class: "book_body" %>

			<% if @book.errors.messages[:body].any? %>
				<p class="error">
					<%= @book.errors.messages[:body][0] %>
				</p>
			<% end %>

		</div>

		<div class="new-button">
			<%= f.submit 'Create Book' %>
		</div>

	<% end %>

</div>